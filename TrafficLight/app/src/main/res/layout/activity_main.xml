<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.trafficlight.MainActivity"
    android:background="?attr/colorButtonNormal">


    <Button
        android:text="@string/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onYellowButtonClick"
        android:id="@+id/buttonYellow"
        tools:text="@string/yellow"
        style="@android:style/Widget.Button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:textColor="@color/colorYellow"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:backgroundTint="?android:attr/textColorTertiary" />

    <Button
        android:text="@string/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRed"
        tools:text="@string/red"
        android:onClick="onRedButtonClick"
        style="@android:style/Widget.Button"
        android:visibility="visible"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_above="@+id/buttonYellow"
        android:textColor="@color/colorRed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?android:attr/textColorTertiary" />

    <Button
        android:text="@string/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGreenButtonClick"
        android:id="@+id/buttonGreen"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/colorGreen"
        tools:text="@string/green"
        style="@android:style/Widget.Button"
        android:layout_below="@+id/buttonYellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?android:attr/textColorTertiary" />


</RelativeLayout>
